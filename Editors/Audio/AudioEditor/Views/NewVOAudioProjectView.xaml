<UserControl x:Class="Editors.Audio.AudioEditor.Views.NewVOAudioProjectView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewmodels="clr-namespace:Editors.Audio.AudioEditor.ViewModels"
             xmlns:converters="clr-namespace:Editors.Audio.AudioEditor" 
             xmlns:sys="clr-namespace:System;assembly=netstandard"
             d:DataContext="{d:DesignInstance Type=viewmodels:NewVOAudioProjectViewModel}"
             mc:Ignorable="d"
             d:MinWidth="560" d:DesignHeight="560">

    <UserControl.Resources>
        <!-- Enum to string converter -->
        <converters:SettingsEnumConverter x:Key="SettingsEnumConverter"/>
        <DataTemplate x:Key="EnumToStringTemplate">
            <TextBlock Text="{Binding Converter={StaticResource SettingsEnumConverter}}"/>
        </DataTemplate>
        
        <!-- Default height -->
        <sys:Double x:Key="DefaultHeight">23</sys:Double>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Audio Project Name -->
            <Grid Grid.Row="0" Margin="0, 0, 0, 5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="145"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Content="Name:" VerticalAlignment="Center"/>
                <TextBox Grid.Column="1" VerticalAlignment="Center" Height="{StaticResource DefaultHeight}" 
                         Text="{Binding AudioProjectFileName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         ToolTip="PLACEHOLDER TOOLTIP"/>
            </Grid>

            <!-- Audio Project Location -->
            <Grid Grid.Row="1" Margin="0, 2, 0, 5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="145"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Label Content="Location:" VerticalAlignment="Center"/>
                <TextBox Grid.Column="1" VerticalAlignment="Center" Height="{StaticResource DefaultHeight}"  
                         Text="{Binding AudioProjectDirectory, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         ToolTip="PLACEHOLDER TOOLTIP"
                         IsReadOnly="True"/>
                <Button Grid.Column="2" Content="..." VerticalAlignment="Center" Width="30" Height="{StaticResource DefaultHeight}" Margin="5, 0, 0, 0" Command="{Binding SetNewFileLocationCommand}"/>
            </Grid>

            <!-- States File Path -->
            <Grid Grid.Row="2" Margin="0, 2, 0, 5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="145"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Label Content="Modded States Location:" VerticalAlignment="Center"/>
                <TextBox Grid.Column="1" VerticalAlignment="Center" Height="{StaticResource DefaultHeight}"  
                         Text="{Binding ModdedStatesFilePath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         ToolTip="PLACEHOLDER TOOLTIP"
                         IsReadOnly="True"/>
                <Button Grid.Column="2" Content="..." VerticalAlignment="Center" Width="30" Height="{StaticResource DefaultHeight}" Margin="5, 0, 0, 0" Command="{Binding SetCustomStatesLocationCommand}"/>
            </Grid>

            <!-- Language Selection -->
            <Grid Grid.Row="3" Margin="0, 2, 0, 5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="145"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Content="Language:" VerticalAlignment="Center"/>
                <ComboBox Grid.Column="1" ToolTip="PLACEHOLDER TOOLTIP" VerticalAlignment="Center" Height="{StaticResource DefaultHeight}" 
                          ItemsSource="{Binding Languages}" 
                          SelectedItem="{Binding SelectedLanguage}" 
                          ItemTemplate="{StaticResource EnumToStringTemplate}"/>
            </Grid>

            <!-- EventType Selection -->
            <Grid Grid.Row="4" Margin="0, 2, 0, 5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="145"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Content="Dialogue Event Types:" VerticalAlignment="Center"/>
                <ComboBox Grid.Column="1" VerticalAlignment="Center" Height="{StaticResource DefaultHeight}" 
                          ItemsSource="{Binding AudioProjectEventTypes}" 
                          SelectedItem="{Binding SelectedAudioProjectEventType}" 
                          ItemTemplate="{StaticResource EnumToStringTemplate}"
                          ToolTip="PLACEHOLDER TOOLTIP"/>
            </Grid>

            <!-- EventSubType Selection -->
            <Grid Grid.Row="5" Margin="0, 2, 0, 5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="145"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Content="Dialogue Event Subtypes:" VerticalAlignment="Center"/>
                <ComboBox Grid.Column="1" VerticalAlignment="Center" Height="{StaticResource DefaultHeight}" 
                          ItemsSource="{Binding AudioProjectSubtypes}" 
                          SelectedItem="{Binding SelectedAudioProjectEventSubtype}" 
                          ItemTemplate="{StaticResource EnumToStringTemplate}"
                          ToolTip="PLACEHOLDER TOOLTIP"/>
            </Grid>

            <!-- Dialogue Events Section -->
            <Grid Grid.Row="6" Margin="0, 4, 0, 5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="145"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Content="Dialogue Events:" VerticalAlignment="Top"/>
                <ListBox Grid.Column="1" Margin="0, 0, 0, 0" Height="200" VerticalAlignment="Top" ItemsSource="{Binding DialogueEventCheckBoxes}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <CheckBox Content="{Binding Content}" IsChecked="{Binding IsChecked, Mode=TwoWay}" />
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>

            <!-- Buttons for Dialogue Events Section -->
            <Grid Grid.Row="7" Margin="0, 5, 0, 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="145"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Select All" Width="125" Height="{StaticResource DefaultHeight}" Margin="0, 0, 9, 0" Command="{Binding SelectAllCommand}"/>
                    <Button Content="Select Recommended" Width="125" Height="{StaticResource DefaultHeight}" Margin="0, 0, 8, 0" Command="{Binding SelectRecommendedCommand}"/>
                    <Button Content="Select None" Width="125" Height="{StaticResource DefaultHeight}" Margin="0, 0, 0, 0" Command="{Binding SelectNoneCommand}"/>
                </StackPanel>
            </Grid>
        </Grid>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="OK" Width="75" Height="{StaticResource DefaultHeight}" Margin="0, 0, 5, 0" Command="{Binding CreateAudioProjectCommand}" IsEnabled="{Binding IsOkButtonIsEnabled}"/>
            <Button Content="Cancel" Width="75" Height="{StaticResource DefaultHeight}" Margin="5, 0, 0, 0" Command="{Binding CloseWindowActionCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>
