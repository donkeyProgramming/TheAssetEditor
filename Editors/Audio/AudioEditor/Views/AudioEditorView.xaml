<UserControl 
    x:Class="Editors.Audio.AudioEditor.Views.AudioEditorView"
    x:Name="AudioEditor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:s="http://schemas.singulink.com/xaml" 
    xmlns:views="clr-namespace:Editors.Audio.AudioEditor.Views"
    xmlns:extendedwpftoolkit="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit"
    xmlns:audioproject="clr-namespace:Editors.Audio.AudioEditor.AudioProject"
    xmlns:audioeditor="clr-namespace:Editors.Audio.AudioEditor"
    xmlns:converters="clr-namespace:Editors.Audio.AudioEditor.Converters" 
    xmlns:sys="clr-namespace:System;assembly=netstandard"
    xmlns:behaviors="clr-namespace:Shared.Ui.Common.Behaviors;assembly=Shared.Ui" 
    xmlns:viewmodels="clr-namespace:Editors.Audio.AudioEditor.ViewModels" 
    d:DataContext="{d:DesignInstance Type=viewmodels:AudioEditorViewModel}"
    mc:Ignorable="d" 
    d:DesignWidth="1200" d:DesignHeight="700">

    <UserControl.Resources>
        <BooleanToVisibilityConverter 
            x:Key="BoolToVisibilityConverter"/>
        <converters:SettingsEnumConverter 
            x:Key="SettingsEnumConverter"/>
        <DataTemplate 
            x:Key="EnumToStringTemplate">
            <TextBlock 
                Text="{Binding Converter={StaticResource SettingsEnumConverter}}"/>
        </DataTemplate>
        <sys:Double 
            x:Key="DefaultHeight">23</sys:Double>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition 
                Height="Auto"/>
            <RowDefinition 
                Height="Auto"/>
            <RowDefinition 
                Height="*"/>
        </Grid.RowDefinitions>

        <!-- File Menu -->
        <Grid 
            Grid.Row="0" >
            
            <Grid.RowDefinitions>
                <RowDefinition 
                    Height="Auto"/>
            </Grid.RowDefinitions>

            <Menu 
                Grid.Row="0" 
                Margin="0, 5, 5, 0">
                <MenuItem 
                    Header="_File" 
                    HorizontalAlignment="Left">
                    <MenuItem 
                        Header="New Audio Project" 
                        Command="{Binding NewAudioProjectCommand}"/>
                    <MenuItem 
                        Header="Open Audio Project" 
                        Command="{Binding LoadAudioProjectCommand}"/>
                    <MenuItem 
                        Header="Save Audio Project" 
                        Command="{Binding SaveAudioProjectCommand}"/>
                </MenuItem>
            </Menu>
        </Grid>

        <!-- Divider -->
        <Border 
            Grid.Row="1" 
            Height="5" 
            Background="{DynamicResource App.Border}" 
            Margin="0, 5, 0, 0"/>

        <Grid 
            Grid.Row="2">
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition 
                    Width="485"/>
                <ColumnDefinition 
                    Width="Auto"/>
                <ColumnDefinition 
                    Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Audio Project Explorer -->
            <Grid 
                Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition 
                        Height="*"/>
                </Grid.RowDefinitions>

                <Grid 
                    Grid.Row="1">

                    <Grid.RowDefinitions>
                        <RowDefinition 
                            Height="Auto"/>
                        <RowDefinition 
                            Height="450"/>
                        <RowDefinition 
                            Height="Auto"/>
                        <RowDefinition 
                            Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid 
                        Grid.Row="0">
                        
                        <Grid.RowDefinitions>
                            <RowDefinition 
                                Height="Auto"/>
                            <RowDefinition 
                                Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Label 
                            Grid.Row="0"
                            Content="{Binding AudioProjectExplorerLabel}"/>

                        <!-- Filtering -->
                        <Grid 
                            Grid.Row="1" 
                            Margin="0, 0, 0, 5">

                            <Grid.RowDefinitions>
                                <RowDefinition 
                                    Height="Auto"/>
                                <RowDefinition 
                                    Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition 
                                    Width="*"/>
                                <ColumnDefinition 
                                    Width="*"/>
                            </Grid.ColumnDefinitions>

                            <extendedwpftoolkit:WatermarkComboBox 
                                Grid.Row="0" 
                                Grid.Column="0" 
                                VerticalAlignment="Center" 
                                Margin="5, 0, 5, 0"
                                Width="Auto"
                                Height="{StaticResource DefaultHeight}" 
                                ItemsSource="{Binding DialogueEventPresets}" 
                                SelectedItem="{Binding SelectedDialogueEventPreset}"
                                IsEnabled="{Binding IsDialogueEventPresetFilterEnabled}"
                                Watermark="Select Dialogue Event Preset Filter" 
                                ToolTip="PLACEHOLDER"/>

                            <Button 
                                Grid.Row="0" 
                                Grid.Column="1" 
                                Content="Reset Dialogue Event Filtering"
                                ToolTip="PLACEHOLDER" 
                                Margin="5, 0, 0, 0" 
                                VerticalAlignment="Center" 
                                Width="180" 
                                HorizontalAlignment="Left"
                                Command="{Binding ResetFilteringCommand}"/>

                            <CheckBox 
                                Grid.Row="1" 
                                Grid.Column="0" 
                                Content="Show Edited SoundBanks Only"
                                ToolTip="PLACEHOLDER" 
                                Margin="5, 5, 0, 0" 
                                VerticalAlignment="Center" 
                                IsChecked="{Binding ShowEditedSoundBanksOnly, Mode=TwoWay}" />

                            <CheckBox 
                                Grid.Row="1" 
                                Grid.Column="1" 
                                Content="Show Edited Dialogue Events Only"
                                ToolTip="PLACEHOLDER" 
                                Margin="5, 5, 0, 0" 
                                VerticalAlignment="Center" 
                                IsChecked="{Binding ShowEditedDialogueEventsOnly, Mode=TwoWay}" />
                        </Grid>
                    </Grid>

                    <!-- Audio Project TreeView -->
                    <Grid 
                        Grid.Row="1" 
                        Margin="0, 5, 0, 0">

                        <TreeView 
                            Padding="2.5, 5, 2.5, 5"
                            ItemsSource="{Binding AudioProjectTreeViewItems}" 
                            SelectedItemChanged="TreeView_SelectedItemChanged"
                            behaviors:TreeViewExtension.SelectItemOnRightClick="True"
                            VirtualizingPanel.IsVirtualizing="True"
                            VirtualizingPanel.VirtualizationMode="Recycling"
                            VirtualizingPanel.IsVirtualizingWhenGrouping="True">

                            <TreeView.Resources>
                                <HierarchicalDataTemplate 
                                    DataType="{x:Type audioeditor:ActionEventSoundBanksTreeViewWrapper}" 
                                    ItemsSource="{Binding ActionEventSoundBanks}">
                                    <TextBlock 
                                        Text="{Binding Name}" />
                                </HierarchicalDataTemplate>

                                <HierarchicalDataTemplate 
                                    DataType="{x:Type audioeditor:DialogueEventSoundBanksTreeViewWrapper}" 
                                    ItemsSource="{Binding DialogueEventSoundBanks}">
                                    <TextBlock 
                                        Text="{Binding Name}" />
                                </HierarchicalDataTemplate>

                                <HierarchicalDataTemplate 
                                    DataType="{x:Type audioproject:SoundBank}"
                                    ItemsSource="{Binding SoundBankTreeViewItems}">
                                    <TextBlock>
                                        <TextBlock.Inlines>
                                            <Run 
                                                Text="{Binding Name}" />
                                            <Run 
                                                Text="{Binding FilteredBy}" 
                                                Foreground="{DynamicResource ABrush.Foreground.Disabled}"/>
                                        </TextBlock.Inlines>
                                    </TextBlock>
                                </HierarchicalDataTemplate>

                                <HierarchicalDataTemplate 
                                    DataType="{x:Type audioproject:DialogueEvent}">
                                    <TextBlock 
                                        Text="{Binding Name}" />
                                </HierarchicalDataTemplate>

                                <HierarchicalDataTemplate 
                                    DataType="{x:Type audioeditor:ModdedStatesTreeViewWrapper}" 
                                    ItemsSource="{Binding ModdedStates}">
                                    <TextBlock 
                                        Text="{Binding Name}" />
                                </HierarchicalDataTemplate>

                                <HierarchicalDataTemplate 
                                    DataType="{x:Type audioproject:StateGroup}">
                                    <TextBlock 
                                        Text="{Binding Name}" />
                                </HierarchicalDataTemplate>
                            </TreeView.Resources>
                        </TreeView>
                    </Grid>

                    <GridSplitter
                        Grid.Row="2"
                        Height="5"
                        Background="{DynamicResource App.Border}"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Stretch"
                        ResizeBehavior="PreviousAndNext"
                        ResizeDirection="Rows"/>

                    <views:AudioFilesExplorerView 
                        Grid.Row="3"
                        Grid.Column="0"
                        DataContext="{Binding AudioFilesExplorerViewModel}"/>
                </Grid>
            </Grid>

            <GridSplitter 
                Grid.Column="1" 
                Width="5" 
                Background="{DynamicResource App.Border}" 
                VerticalAlignment="Stretch" 
                HorizontalAlignment="Center"
                ResizeBehavior="PreviousAndNext" 
                ResizeDirection="Columns"/>
            
            <!-- Audio Project Editor -->
            <Grid 
                Grid.Column="2">

                <Grid.RowDefinitions>
                    <RowDefinition 
                        Height="Auto"/>
                    <RowDefinition 
                        Height="Auto"/>
                    <RowDefinition 
                        Height="Auto"/>
                    <RowDefinition 
                        Height="Auto"/>
                    <RowDefinition 
                        Height="Auto"/>
                    <RowDefinition 
                        Height="Auto"/>
                    <RowDefinition 
                        Height="Auto"/>
                    <RowDefinition 
                        Height="*"/>
                </Grid.RowDefinitions>

                <Label 
                    Grid.Row="0" 
                    Content="{Binding AudioProjectEditorLabel}"/>

                <!-- Setting CanUserAddRows to false ensures that data won't go missing from the last row when a new row is added. Wtf WPF. -->
                <DataGrid 
                    Grid.Row="1" 
                    Tag="{Binding AudioProjectEditorSingleRowDataGridTag}" 
                    Margin="0, 0, 0, 0"
                    AutoGenerateColumns="False"
                    CanUserAddRows="False" 
                    ItemsSource="{Binding AudioProjectEditorSingleRowDataGrid}"
                    EnableRowVirtualization="True" 
                    EnableColumnVirtualization="True"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"/>

                <Grid 
                    Grid.Row="2" 
                    MinHeight="25" 
                    Margin="0, 5, 0, 0">

                    <Grid.RowDefinitions>
                        <RowDefinition 
                            Height="Auto"/>
                        <RowDefinition 
                            Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition 
                            Width="Auto"/>
                        <ColumnDefinition 
                            Width="Auto"/>
                        <ColumnDefinition 
                            Width="Auto"/>
                        <ColumnDefinition 
                            Width="Auto"/>
                        <ColumnDefinition 
                            Width="Auto"/>
                        <ColumnDefinition 
                            Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button 
                        Grid.Row="0"
                        Grid.Column="0"
                        Content="Add Row"
                        ToolTip="PLACEHOLDER" 
                        Command="{Binding AddRowFromAudioProjectEditorSingleRowDataGridToFullDataGridCommand}" 
                        Margin="5, 0, 0, 0" 
                        Width="100" 
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Left"
                        IsEnabled="{Binding IsAddRowButtonEnabled}"/>

                    <Button 
                        Grid.Row="0"
                        Grid.Column="1"
                        Content="Update Row" 
                        ToolTip="PLACEHOLDER" 
                        Command="{Binding UpdateAudioProjectEditorFullDataGridRowCommand}" 
                        Margin="5, 0, 0, 0" 
                        Width="100" 
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Left"
                        IsEnabled="{Binding IsUpdateRowButtonEnabled}"/>

                    <Button 
                        Grid.Row="0"
                        Grid.Column="2"
                        Content="Remove Row" 
                        ToolTip="PLACEHOLDER" 
                        Command="{Binding RemoveAudioProjectEditorFullDataGridRowCommand}" 
                        Margin="5, 0, 0, 0" 
                        Width="100" 
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Left"
                        IsEnabled="{Binding IsRemoveRowButtonEnabled}"/>

                    <Button 
                        Grid.Row="0"
                        Grid.Column="3"
                        Content="Add Audio Files" 
                        ToolTip="Select the wav files from the Audio Files Explorer and add them with this button." 
                        Command="{Binding AddSelectedAudioFilesCommand}" 
                        Margin="5, 0, 0, 0" 
                        Width="100" 
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Left"
                        IsEnabled="{Binding IsAddAudioFilesButtonEnabled}"/>
                    
                    <Button 
                        Grid.Row="0"
                        Grid.Column="4"
                        Content="Play Audio" 
                        ToolTip="Play a random audio file audio from the selected item." 
                        Command="{Binding PlayRandomAudioFileCommand}" 
                        Margin="5, 0, 0, 0" 
                        Width="100" 
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Left"
                        IsEnabled="{Binding IsPlayAudioButtonEnabled}"/>

                    <CheckBox 
                        Grid.Row="0"
                        Grid.Column="5"
                        Content="Show Modded States Only"
                        ToolTip="PLACEHOLDER" 
                        Margin="5, 0, 0, 0" 
                        VerticalAlignment="Center" 
                        IsChecked="{Binding ShowModdedStatesOnly, Mode=TwoWay}" 
                        HorizontalAlignment="Left" 
                        IsEnabled="{Binding IsShowModdedStatesCheckBoxEnabled}"/>
                </Grid>

                <Border 
                    Grid.Row="3"
                    Height="5" 
                    Background="{DynamicResource App.Border}"/>
                
                <views:AudioSettingsView 
                    Grid.Row="4"
                    Grid.Column="0"
                    DataContext="{Binding AudioSettingsViewModel}"/>

                <Border 
                    Grid.Row="5"
                    Height="5" 
                    Background="{DynamicResource App.Border}"/>

                <Label 
                    Grid.Row="6"
                    Content="{Binding AudioProjectViewerLabel}"/>
                
                <!-- Setting CanUserAddRows to false ensures that data won't go missing from the last row when a new row is added. Wtf WPF. -->
                <DataGrid 
                    Grid.Row="6"
                    Margin="0, 0, 0, 0"
                    Tag="{Binding AudioProjectEditorFullDataGridTag}" 
                    AutoGenerateColumns="False" 
                    VerticalScrollBarVisibility="Auto" 
                    SelectionChanged="DataGrid_SelectionChanged"
                    CanUserAddRows="False"
                    ItemsSource="{Binding AudioProjectEditorFullDataGrid}"
                    EnableRowVirtualization="True" 
                    EnableColumnVirtualization="True"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled">

                    <DataGrid.ContextMenu>
                        <ContextMenu>
                            <MenuItem 
                                Header="Copy" 
                                Command="{Binding CopyRowsCommand}"/>
                            <MenuItem 
                                Header="Paste" 
                                Command="{Binding PasteRowsCommand}" 
                                IsEnabled="{Binding IsPasteEnabled}"/>
                        </ContextMenu>
                    </DataGrid.ContextMenu>
                </DataGrid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>