<UserControl x:Class="Editors.Audio.AudioEditor.Views.AudioSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:s="http://schemas.singulink.com/xaml" 
             xmlns:extendedwpftoolkit="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit"
             xmlns:audioproject="clr-namespace:Editors.Audio.AudioEditor.AudioProject"
             xmlns:audioeditor="clr-namespace:Editors.Audio.AudioEditor"
             xmlns:converters="clr-namespace:Editors.Audio.AudioEditor.Converters" 
             xmlns:sys="clr-namespace:System;assembly=netstandard"
             xmlns:behaviors="clr-namespace:Shared.Ui.Common.Behaviors;assembly=Shared.Ui" 
             xmlns:viewmodels="clr-namespace:Editors.Audio.AudioEditor.ViewModels" 
             d:DataContext="{d:DesignInstance Type=viewmodels:AudioSettingsViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="190" d:DesignWidth="960">

    <UserControl.Resources>
        <converters:SettingsEnumConverter 
            x:Key="SettingsEnumConverter"/>
        <DataTemplate 
            x:Key="EnumToStringTemplate">
            <TextBlock 
                Text="{Binding Converter={StaticResource SettingsEnumConverter}}"/>
        </DataTemplate>
    </UserControl.Resources>
    
    <Expander
        Margin="2.5, 0, 0, 0"
        Header="Audio Settings"
        IsExpanded="True">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition
                    Height="Auto"/>
                <RowDefinition
                    Height="Auto"/>
            </Grid.RowDefinitions>
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition 
                    Width="Auto"/>
                <ColumnDefinition 
                    Width="Auto"/>
                <ColumnDefinition 
                    Width="Auto"/>
                <ColumnDefinition 
                    Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Grid
                Grid.Row="0"
                Grid.ColumnSpan="4"
                Margin="0, 5, 0, 0">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition
                        Width="Auto"/>
                    <ColumnDefinition
                        Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button 
                    Grid.Column="0"
                    Content="Reset Audio Settings" 
                    ToolTip="PLACEHOLDER"
                    Margin="5, 0, 0, 5" 
                    Width="140" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Left"/>

                <CheckBox 
                    Grid.Column="1"
                    ToolTip="PLACEHOLDER" 
                    Margin="5, 0, 0, 5" 
                    VerticalAlignment="Center"
                    Content="Use Default Audio Settings"/>
            </Grid>
            
            <Border 
                Grid.Row="1"
                Grid.Column="0"
                Margin="5, 5, 0, 0"
                BorderBrush="{DynamicResource Button.Static.Border}"
                BorderThickness="2, 2, 1, 2">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition 
                            Height="Auto"/>
                        <RowDefinition 
                            Height="Auto"/>
                        <RowDefinition 
                            Height="Auto"/>
                        <RowDefinition 
                            Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition 
                            Width="Auto"/>
                        <ColumnDefinition 
                            Width="125"/>
                    </Grid.ColumnDefinitions>

                    <Border
                        Grid.Row="0"
                        Grid.ColumnSpan="2"
                        BorderBrush="{DynamicResource Button.Static.Border}"
                        BorderThickness="0, 0, 0, 2"
                        Background="{DynamicResource Button.Static.Background}">
                        
                        <TextBlock 
                            Margin="10, 5, 10, 5"
                            Text="General:"/>
                    </Border>
                    
                    <TextBlock 
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="10, 10, 5, 5"
                        Text="Play Type"/>

                    <ComboBox
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="10, 10, 10, 5"
                        ItemsSource="{Binding PlayTypes}" 
                        SelectedItem="{Binding SelectedPlayType}" 
                        ItemTemplate="{StaticResource EnumToStringTemplate}"/>

                    <TextBlock 
                        Grid.Row="2"
                        Grid.Column="0"
                        Margin="10, 0, 5, 5"
                        Text="Volume"/>

                    <extendedwpftoolkit:DecimalUpDown
                        Grid.Row="2"
                        Grid.Column="1"
                        Margin="10, 0, 10, 5"
                        Minimum="0"
                        Maximum="10"
                        Increment="0.05"
                        ClipValueToMinMax="True"/>

                    <TextBlock 
                        Grid.Row="3"
                        Grid.Column="0"
                        Margin="10, 0, 5, 10"
                        Text="Initial Delay"/>

                    <extendedwpftoolkit:DecimalUpDown
                        Grid.Row="3"
                        Grid.Column="1"
                        Margin="10, 0, 10, 10"
                        Minimum="0"
                        Maximum="10"
                        Increment="0.05"
                        ClipValueToMinMax="True"/>
                </Grid>
            </Border>

            <Border 
                Grid.Row="1"
                Grid.Column="1"
                Margin="0, 5, 0, 0"
                BorderBrush="{DynamicResource Button.Static.Border}"
                BorderThickness="1, 2, 1, 2">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition 
                            Height="Auto"/>
                        <RowDefinition 
                            Height="Auto"/>
                        <RowDefinition 
                            Height="Auto"/>
                        <RowDefinition 
                            Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition 
                            Width="Auto"/>
                        <ColumnDefinition 
                            Width="125"/>
                    </Grid.ColumnDefinitions>

                    <Border
                        Grid.Row="0"
                        Grid.ColumnSpan="2"
                        BorderBrush="{DynamicResource Button.Static.Border}"
                        BorderThickness="0, 0, 0, 2"
                        Background="{DynamicResource Button.Static.Background}">

                        <TextBlock 
                            Margin="10, 5, 10, 5"
                            Text="Playlist:"/>
                    </Border>

                    <TextBlock 
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="10, 10, 5, 5"
                        Text="Play Mode"/>

                    <ComboBox
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="10, 10, 10, 5"/>

                    <CheckBox
                        Grid.Row="2"
                        Grid.Column="0"
                        Margin="10, 0, 5, 5"
                        Content="Avoid Repeating Last"/>

                    <extendedwpftoolkit:IntegerUpDown 
                        Grid.Row="2"
                        Grid.Column="1"
                        Minimum="1"
                        Maximum="999"
                        ClipValueToMinMax="True"
                        Margin="10, 0, 10, 5"/>

                    <TextBlock 
                        Grid.Row="3"
                        Grid.Column="0"
                        Margin="10, 0, 5, 5"
                        Text="At End of Playlist"/>

                    <ComboBox
                        Grid.Row="3"
                        Grid.Column="1"
                        Margin="10, 0, 10, 5"/>
                </Grid>
            </Border>


            <Border 
                Grid.Row="1"
                Grid.Column="2"
                Margin="0, 5, 0, 0"
                BorderBrush="{DynamicResource Button.Static.Border}"
                BorderThickness="1, 2, 1, 2">
                <Grid>

                    <Grid.RowDefinitions>
                        <RowDefinition 
                            Height="Auto"/>
                        <RowDefinition 
                            Height="Auto"/>
                        <RowDefinition 
                            Height="Auto"/>
                        <RowDefinition 
                            Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition 
                            Width="Auto"/>
                        <ColumnDefinition 
                            Width="125"/>
                    </Grid.ColumnDefinitions>

                    <Border
                        Grid.Row="0"
                        Grid.ColumnSpan="2"
                        BorderBrush="{DynamicResource Button.Static.Border}"
                        BorderThickness="0, 0, 0, 2"
                        Background="{DynamicResource Button.Static.Background}">

                        <TextBlock 
                            Margin="10, 5, 10, 5"
                            Text="Playlist Looping:"/>
                    </Border>

                    <TextBlock 
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="10, 10, 5, 5"
                        Text="Enable"/>

                    <CheckBox
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="10, 10, 10, 5"/>
                    
                    <TextBlock 
                        Grid.Row="2"
                        Grid.Column="0"
                        Margin="10, 0, 5, 5"
                        Text="Loop Infinitely"/>

                    <CheckBox
                        Grid.Row="2"
                        Grid.Column="1"
                        Margin="10, 0, 10, 5"/>

                    <TextBlock 
                        Grid.Row="3"
                        Grid.Column="0"
                        Margin="10, 1, 5, 5"
                        Text="Number of Loops"/>

                    <extendedwpftoolkit:IntegerUpDown 
                        Grid.Row="3"
                        Grid.Column="1"
                        Minimum="1"
                        Maximum="999"
                        ClipValueToMinMax="True"
                        Margin="10, 0, 10, 10"/>
                </Grid>
            </Border>

            <Border 
                Grid.Row="1"
                Grid.Column="3"
                Margin="0, 5, 0, 0"
                BorderBrush="{DynamicResource Button.Static.Border}"
                BorderThickness="1, 2, 2, 2">
                
                <Grid>

                    <Grid.RowDefinitions>
                        <RowDefinition 
                            Height="Auto"/>
                        <RowDefinition 
                            Height="Auto"/>
                        <RowDefinition 
                            Height="Auto"/>
                        <RowDefinition 
                            Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition 
                            Width="Auto"/>
                        <ColumnDefinition 
                            Width="125"/>
                    </Grid.ColumnDefinitions>

                    <Border
                        Grid.Row="0"
                        Grid.ColumnSpan="2"
                        BorderBrush="{DynamicResource Button.Static.Border}"
                        BorderThickness="0, 0, 0, 2"
                        Background="{DynamicResource Button.Static.Background}">

                        <TextBlock 
                            Margin="10, 5, 10, 5"
                            Text="Playlist Transitions:"/>
                    </Border>

                    <TextBlock 
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="10, 10, 5, 5"
                        Text="Enable"/>

                    <CheckBox
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="10, 10, 10, 5"/>

                    <TextBlock 
                        Grid.Row="2"
                        Grid.Column="0"
                        Margin="10, 0, 5, 5"
                        Text="Transition"/>

                    <ComboBox
                        Grid.Row="2"
                        Grid.Column="1"
                        Margin="10, 0, 10, 5"/>

                    <TextBlock 
                        Grid.Row="3"
                        Grid.Column="0"
                        Margin="10, 1, 5, 5"
                        Text="Transition Delay"/>

                    <extendedwpftoolkit:DecimalUpDown  
                        Grid.Row="3"
                        Grid.Column="1"
                        Margin="10, 0, 10, 10"
                        Minimum="0"
                        Maximum="10"
                        Increment="0.05"
                        ClipValueToMinMax="True"/>
                </Grid>
            </Border>
        </Grid>
    </Expander>
</UserControl>
