<UserControl x:Class="Editors.Audio.AudioEditor.Presentation.WaveformVisualiser.WaveformVisualiserView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Editors.Audio.AudioEditor.Presentation.WaveformVisualiser" 
             d:DataContext="{d:DesignInstance Type=local:WaveformVisualiserViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border
            BorderBrush="{DynamicResource TextBox.Static.Border}"
            BorderThickness="1"
            Background="{DynamicResource TreeView.Static.Background}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition 
                        Height="Auto"/>
                    <RowDefinition 
                        Height="180"/>
                </Grid.RowDefinitions>

                <StackPanel 
                    Grid.Row="0" 
                    Orientation="Horizontal" 
                    Margin="4,4,4,0">
                    
                    <Button 
                        Width="70" 
                        Height="24" 
                        Content="Play" 
                        Command="{Binding PlayPauseCommand}"/>
                    <Button 
                        Width="70" 
                        Height="24" 
                        Margin="4,0,0,0" 
                        Content="Stop" 
                        Command="{Binding StopCommand}"/>
                </StackPanel>

                <Grid Grid.Row="1" x:Name="AudioWaveformGrid" ClipToBounds="True">
                    <Image
                        Stretch="None"
                        SnapsToDevicePixels="True"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Source="{Binding AudioWaveformBaseImageSource}"
                        Width="{Binding WaveformPixelWidth}"
                        Height="{Binding WaveformPixelHeight}"/>

                    <Image
                        Stretch="None"
                        SnapsToDevicePixels="True"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Source="{Binding AudioWaveformOverlayImageSource}"
                        Width="{Binding WaveformPixelWidth}"
                        Height="{Binding WaveformPixelHeight}">
                        <Image.Clip>
                            <RectangleGeometry Rect="{Binding AudioWaveformOverlayClip}"/>
                        </Image.Clip>
                    </Image>

                    <Border
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Margin="2, 2, 0, 0"
                        Padding="4, 1, 0, 0"
                        Background="#AA1E1E1E"
                        BorderBrush="#33000000"
                        BorderThickness="1">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding CurrentPlaybackTime, StringFormat={}{0:mm\\:ss\\.ff}}"/>
                            <TextBlock Text=" / "/>
                            <TextBlock Text="{Binding TotalPlaybackTime, StringFormat={}{0:mm\\:ss\\.ff}}"/>
                        </StackPanel>
                    </Border>

                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
