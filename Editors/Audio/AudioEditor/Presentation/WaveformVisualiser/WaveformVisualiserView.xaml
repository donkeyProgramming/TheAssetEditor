<UserControl x:Class="Editors.Audio.AudioEditor.Presentation.WaveformVisualiser.WaveformVisualiserView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Editors.Audio.AudioEditor.Presentation.WaveformVisualiser" 
             d:DataContext="{d:DesignInstance Type=local:WaveformVisualiserViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid
        Background="{DynamicResource TreeView.Static.Background}">
        
        <Grid.RowDefinitions>
            <RowDefinition 
                Height="Auto"/>
            <RowDefinition 
                Height="Auto"/>
            <RowDefinition 
                Height="Auto"/>
        </Grid.RowDefinitions>

        <Label
            Grid.Row="0" 
            Margin="0, 0, 0, 5"
            Content="{Binding WaveformVisualiserLabel}"/>

        <Grid
            Grid.Row="1"
            x:Name="AudioWaveformGrid">

            <Image
                Stretch="None"
                SnapsToDevicePixels="True"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Source="{Binding AudioWaveformBaseImageSource}"
                Width="{Binding WaveformPixelWidth}"
                Height="{Binding WaveformPixelHeight}"/>

            <Image
                Stretch="None"
                SnapsToDevicePixels="True"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Source="{Binding AudioWaveformOverlayImageSource}"
                Width="{Binding WaveformPixelWidth}"
                Height="{Binding WaveformPixelHeight}">

                <Image.Clip>
                    <RectangleGeometry 
                        Rect="{Binding AudioWaveformOverlayClip}"/>
                </Image.Clip>
            </Image>
        </Grid>
        
        <Grid
            Grid.Row="2"
            Margin="0, 5, 0, 0">

            <Grid
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Margin="5, 0, 0, 5"
                Panel.ZIndex="10">
                <TextBlock
                    VerticalAlignment="Center"
                    Text="{Binding CurrentPlaybackTime, StringFormat={}{0:mm\\:ss\\.ff}}"/>
            </Grid>

            <Button
                Margin="0, 0, 0, 5"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Width="70"
                Content="Play" 
                Command="{Binding PlayPauseCommand}"/>

            <Grid
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="0, 0, 5, 5"
                Panel.ZIndex="10">

                <TextBlock
                    VerticalAlignment="Center"
                    Text="{Binding TotalPlaybackTime, StringFormat={}{0:mm\\:ss\\.ff}}"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
