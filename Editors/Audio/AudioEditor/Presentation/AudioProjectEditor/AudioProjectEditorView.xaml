<UserControl 
    x:Class="Editors.Audio.AudioEditor.Presentation.AudioProjectEditor.AudioProjectEditorView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:Behaviors="clr-namespace:Shared.Ui.Common.Behaviors;assembly=Shared.Ui"
    xmlns:AudioProjectEditor="clr-namespace:Editors.Audio.AudioEditor.Presentation.AudioProjectEditor" 
    d:DataContext="{d:DesignInstance Type=AudioProjectEditor:AudioProjectEditorViewModel}"
    mc:Ignorable="d"
    d:DesignHeight="450" d:DesignWidth="800">
    
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>
    
    <Grid
        Visibility="{Binding IsEditorVisible, Converter={StaticResource BoolToVisibilityConverter}}">

        <Grid.RowDefinitions>
            <RowDefinition 
                Height="Auto"/>
            <RowDefinition 
                Height="Auto"/>
            <RowDefinition 
                Height="Auto"/>
        </Grid.RowDefinitions>

        <Label 
            Grid.Row="0" 
            Margin="0, 0, 0, 5"
            Content="{Binding EditorLabel}"/>

        <Grid 
            Grid.Row="1" 
            MinHeight="25" 
            Margin="0, 0, 0, 5">

            <Grid.ColumnDefinitions>
                <ColumnDefinition 
                    Width="Auto"/>
                <ColumnDefinition 
                    Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button 
                Grid.Column="0"
                Content="Add Row"
                ToolTip="Adds the row to the Audio Project." 
                Command="{Binding AddRowToViewerCommand}" 
                Margin="5, 0, 0, 0" 
                Width="70" 
                VerticalAlignment="Center" 
                HorizontalAlignment="Left"
                IsEnabled="{Binding IsAddRowButtonEnabled}"/>

            <CheckBox 
                Grid.Column="1"
                Content="Show Modded States Only"
                ToolTip="Shows only modded states in the drop downs rather than modded states and vanilla states." 
                Margin="5, 0, 0, 0" 
                VerticalAlignment="Center" 
                IsChecked="{Binding ShowModdedStatesOnly, Mode=TwoWay}" 
                HorizontalAlignment="Left" 
                IsEnabled="{Binding IsShowModdedStatesCheckBoxEnabled}"
                Visibility="{Binding IsShowModdedStatesCheckBoxVisible, Converter={StaticResource BoolToVisibilityConverter}}"/>
        </Grid>
        
        <!-- Setting CanUserAddRows to false ensures that data won't go missing from the last row when a new row is added. Wtf WPF. -->
        <DataGrid 
            Grid.Row="2"
            Margin="0, 0, 0, 0"
            AutoGenerateColumns="False"
            Behaviors:DataGridColumnsBehavior.Columns ="{Binding DataGridColumns}"
            CanUserAddRows="False" 
            ItemsSource="{Binding Table.DefaultView}"
            EnableRowVirtualization="True" 
            EnableColumnVirtualization="True"
            ScrollViewer.HorizontalScrollBarVisibility="Disabled"/>
    </Grid>
</UserControl>
