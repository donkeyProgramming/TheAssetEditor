<UserControl 
    x:Class="Editors.Audio.AudioEditor.Presentation.AudioProjectViewer.AudioProjectViewerView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:Behaviours="clr-namespace:Shared.Ui.Common.Behaviors;assembly=Shared.Ui"
    xmlns:AudioProjectViewer="clr-namespace:Editors.Audio.AudioEditor.Presentation.AudioProjectViewer"
    xmlns:ValueConverters="clr-namespace:Editors.Audio.AudioEditor.Presentation.AudioProjectViewer.ValueConverters" 
    d:DataContext="{d:DesignInstance Type=AudioProjectViewer:AudioProjectViewerViewModel}"
    mc:Ignorable="d" 
    d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <BooleanToVisibilityConverter 
            x:Key="BoolToVisibilityConverter"/>
        <ValueConverters:ActionEventRowEnablementConverter
            x:Key="ActionEventRowEnablementConverter"/>
    </UserControl.Resources>

    <Grid
        Visibility="{Binding IsViewerVisible, Converter={StaticResource BoolToVisibilityConverter}}">

        <Grid.RowDefinitions>
            <RowDefinition 
                Height="Auto"/>
            <RowDefinition 
                Height="Auto"/>
            <RowDefinition 
                Height="*"/>
        </Grid.RowDefinitions>
        
        <Label 
            Grid.Row="0"
            Margin="0, 0, 0, 5"
            Content="{Binding ViewerLabel}"/>

        <Grid 
            Grid.Row="1" 
            MinHeight="25"
            Margin="0, 0, 0, 5">

            <Grid.ColumnDefinitions>
                <ColumnDefinition 
                    Width="Auto"/>
                <ColumnDefinition 
                    Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <Button 
                Grid.Column="0"
                Margin="5, 0, 0, 0" 
                Width="70" 
                VerticalAlignment="Center" 
                HorizontalAlignment="Left"
                Content="Edit Row"
                ToolTipService.ShowOnDisabled="True"
                Command="{Binding EditRowCommand}" 
                IsEnabled="{Binding IsUpdateRowButtonEnabled}">

                <Button.ToolTip>
                    <ToolTip>
                        <TextBlock 
                            TextWrapping="Wrap">
                            <Run 
                                Text="Removes the selected row from the Audio Project and adds it to the Audio Project Editor."/>
                            <LineBreak/>
                            <LineBreak/>
                            <Run 
                                Text="Shortcut: Ctrl + E"/>
                        </TextBlock>
                    </ToolTip>
                </Button.ToolTip>
            </Button>
            
            <Button 
                Grid.Column="1"
                Margin="5, 0, 0, 0" 
                Width="93" 
                VerticalAlignment="Center"
                HorizontalAlignment="Left"
                Content="Remove Row"
                ToolTipService.ShowOnDisabled="True"
                Command="{Binding RemoveRowCommand}" 
                IsEnabled="{Binding IsRemoveRowButtonEnabled}">

                <Button.ToolTip>
                    <ToolTip>
                        <TextBlock TextWrapping="Wrap">
                            <Run 
                                Text="Removes the selected row(s) from the Audio Project."/>
                            <LineBreak/>
                            <LineBreak/>
                            <Run 
                                Text="Shortcuts: Delete / Backspace"/>
                        </TextBlock>
                    </ToolTip>
                </Button.ToolTip>
            </Button>
        </Grid>

        <!-- Setting CanUserAddRows to false ensures that data won't go missing from the last row when a new row is added. Wtf WPF. -->
        <DataGrid 
            Grid.Row="2"
            x:Name="AudioProjectEditorDataGrid"
            AutoGenerateColumns="False" 
            VerticalScrollBarVisibility="Auto" 
            SelectionChanged="OnDataGridSelectionChanged"
            Behaviours:DataGridColumnsBehavior.Columns ="{Binding DataGridColumns}"
            CanUserAddRows="False"
            ItemsSource="{Binding Table.DefaultView}"
            EnableRowVirtualization="True" 
            EnableColumnVirtualization="True"
            ScrollViewer.HorizontalScrollBarVisibility="Disabled">

            <DataGrid.RowStyle>
                <Style 
                    TargetType="{x:Type DataGridRow}"
                    BasedOn="{StaticResource {x:Type DataGridRow}}">
                    <Setter
                        Property="ToolTipService.ShowOnDisabled"
                        Value="True" />

                    <Setter Property="ToolTip">
                        <Setter.Value>
                            <TextBlock TextWrapping="Wrap">
                                <Run 
                                    Text="To edit or remove rows select them."/>
                                <LineBreak/>
                                <LineBreak/>
                                <Run 
                                    Text="To copy and paste rows (Dialogue Events rows only) select them and right-click or use the shortcuts:"/>
                                <LineBreak/>
                                <Run 
                                    Text="Copy: Ctrl + C"/>
                                <LineBreak/>
                                <Run 
                                    Text="Paste: Ctrl + V"/>
                            </TextBlock>
                        </Setter.Value>
                    </Setter>
                    
                    <Style.Triggers>
                        <DataTrigger 
                            Value="True">
                            <DataTrigger.Binding>
                                <MultiBinding 
                                    Converter="{StaticResource ActionEventRowEnablementConverter}">
                                    <Binding />
                                    <Binding
                                        Path="DataContext.SelectedAudioProjectExplorerNode"
                                        RelativeSource="{RelativeSource AncestorType=UserControl}"/>
                                </MultiBinding>
                            </DataTrigger.Binding>
                            <Setter 
                                Property="IsEnabled" 
                                Value="False" />
                            <Setter 
                                Property="ToolTip"
                                Value="This row cannot be selected directly, it is controlled by the corresponding &quot;Play_...&quot; Action Event." />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>

            <DataGrid.ContextMenu>
                <ContextMenu
                    DataContext="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource Self}}">

                    <MenuItem
                        Header="Copy"
                        Command="{Binding CopyRowsCommand}"
                        Visibility="{Binding IsContextMenuCopyVisible, Converter={StaticResource BoolToVisibilityConverter}}" />

                    <MenuItem
                        Header="Paste"
                        Command="{Binding PasteRowsCommand}"
                        Visibility="{Binding IsContextMenuPasteVisible, Converter={StaticResource BoolToVisibilityConverter}}" />
                </ContextMenu>
            </DataGrid.ContextMenu>
        </DataGrid>
    </Grid>
</UserControl>
